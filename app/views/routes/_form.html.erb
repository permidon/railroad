<%= form_for(@route) do |f| %>
  <%= render 'common/errors', resource: @route %>

  Route title will be create automatically

  <div class="field">
    <%= f.label :train_ids, "Assign trains" %>
    <%= f.collection_select :train_ids, Train.all, :id, :number, {}, { multiple: true } %>
  </div>

  <div class="field">
    <%= f.label :railway_station_ids, "Stations list:" %>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
