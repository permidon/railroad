<%= form_for [:admin, station], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>
  <%= render 'common/errors', resource: station %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить' ), class: "btn btn-default" %>
  </div>
<% end %>
