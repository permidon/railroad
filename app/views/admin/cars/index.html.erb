<h1><%= t('menu.cars') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('common.number') %></th>
      <th><%= t('menu.type') %></th>
      <th><%= t('menu.train_number') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <%= render template: 'admin/cars/_car', locals: { car: car } %>
    <% end %>
  </tbody>
</table>
