<%= form_for(@car, as: :car) do |f| %>
  <%= render 'common/errors', resource: @car %>

  <div class="field">
    <%= f.label :type %>
    <%= f.select :type, {"Sedentary Car" => "SedentaryCar", "Economy Car" => "EconomyCar", "Coupe Car" => "CoupeCar", "Sleeping Car" => "SleepingCar"} %>
  </div>

  <div class="field">
    <%= f.label :upper_places %>
    <%= f.text_field :upper_places %>
  </div>

  <div class="field">
    <%= f.label :lower_places %>
    <%= f.text_field :lower_places %>
  </div>

  <div class="field">
    <%= f.label :side_upper_places %>
    <%= f.text_field :side_upper_places %>
  </div>

  <div class="field">
    <%= f.label :side_lower_places %>
    <%= f.text_field :side_lower_places %>
  </div>

  <div class="field">
    <%= f.label :seat_places %>
    <%= f.text_field :seat_places %>
  </div>

  <div class="field">
    <%= f.label :train_id, "Attach to the train" %>
    <%= f.collection_select :train_id, Train.all, :id, :number, :include_blank => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
